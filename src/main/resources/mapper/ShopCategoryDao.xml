<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.o2o.dao.ShopCategoryDao">
    <select id="queryShopCategory" resultType="com.imooc.o2o.entity.ShopCategory">
        select
        shop_category_id,
        shop_category_name,
        shop_category_desc,
        shop_category_img,
        priority,
        create_time,
        last_edit_time,
        parent_id
        from tb_shop_category
        <where>
            <!--当传入参数为空时，拉取一级目录-->
            <if test="shopCategoryCondition ==null">
                and parent_id is null
            </if>
            <!--当传入参数不为空时，拉取二级目录-->
            <if test="shopCategoryCondition !=null">
                and parent_id is not null
                <!--传入带parentId的参数，查询其父目录-->
                <if test="shopCategoryCondition.parent !=null and shopCategoryCondition.parent.shopCategoryId !=null">
                    and shop_category_id =#{shopCategoryCondition.parent.shopCategoryId}
                </if>
            </if>
        </where>
        order by priority desc
    </select>
</mapper>